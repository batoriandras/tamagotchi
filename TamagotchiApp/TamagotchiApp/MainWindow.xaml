<Window x:Class="TamagotchiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TamagotchiApp"
        mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Welcome to the Admin interface" Grid.Row="0" Grid.ColumnSpan="3" FontSize="20" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Opacity="0.6"/>
        <Button x:Name="NewAnimal" FontSize="25" FontWeight="Bold" Content="New Animal" Grid.Column="0" Grid.Row="1" Width="200" Height="40" Background="Orange" Click="NewAnimal_Click"/>
        <Button x:Name="AllAccount" FontSize="25" FontWeight="Bold" Content="All Account" Grid.Column="2" Grid.Row="1" Width="200" Height="40" Background="Orange" Click="AllAccount_Click" />
        
    </Grid>
</Window>
