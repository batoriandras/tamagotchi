<Window x:Class="TamagotchiApp.AnimalAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TamagotchiApp"
        mc:Ignorable="d"
        Title="AnimalAdd" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/thumb-.jpg"/>
        </Grid.Background>
        <Grid x:Name="AEAnimals" Margin="599,54,10,10"/>
        <Label Content="Already existing animals:" HorizontalAlignment="Left" Margin="599,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="25,36,0,0" VerticalAlignment="Top" Height="35" Width="69" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" Margin="99,36,0,0" TextWrapping="Wrap" Text="Write animal name here" VerticalAlignment="Top" Width="165" Height="35" FontSize="14" VerticalContentAlignment="Center" FontWeight="Light"/>
        <Label Content="Image:" HorizontalAlignment="Left" Margin="25,91,0,0" VerticalAlignment="Top" Height="35" Width="69" FontSize="18"/>
        <Button Content="Upload" HorizontalAlignment="Left" Margin="99,91,0,0" VerticalAlignment="Top" Height="35" Width="71" FontSize="14"/>

    </Grid>
</Window>
