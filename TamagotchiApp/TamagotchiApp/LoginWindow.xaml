<Window x:Class="TamagotchiApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TamagotchiApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Login with admin" Grid.Row="0" Grid.ColumnSpan="3" FontSize="20" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Opacity="0.6"/>
        <Button x:Name="login" FontSize="25" FontWeight="Bold" Content="Login" Grid.Column="1" Grid.Row="3" Width="200" Height="40" Background="Orange" Click="Login_Click"/>
        <TextBox x:Name="username" Grid.Column="1" Grid.Row="1" Width="200" Height="40"/>
        <TextBox x:Name="password" Grid.Column="1" Grid.Row="2" Width="200" Height="40"/>
    </Grid>
    
</Window>
